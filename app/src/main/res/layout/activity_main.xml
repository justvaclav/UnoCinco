<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:style="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.unocinco.MainActivity">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView12"
        android:layout_below="@+id/textView12"
        android:text="Узнайте, что в истории происходило в этот день!"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRecords"
        android:layout_toEndOf="@+id/imageView2"
        android:text="Вопрос дня"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <Button
        android:text="Начать игру"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnStart"
        android:layout_alignParentEnd="true"
        android:onClick="onClick"
        style="@style/Widget.AppCompat.Button.Colored"/>

    <Button
        android:text="Игра с выбором темы"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnStart"
        android:layout_alignParentStart="true"
        android:id="@+id/btnStartChoice"
        android:layout_alignParentEnd="true"
        android:onClick="onClick"
        style="@style/Widget.AppCompat.Button.Colored"/>

    <Button
        android:text="Параметры"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnStartChoice"
        android:layout_alignParentStart="true"
        android:id="@+id/btnRecords"
        android:layout_alignParentEnd="true"
        android:onClick="onClick"
        style="@style/Widget.AppCompat.Button.Colored"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:text="24-05-2018 16:40"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRecords"
        android:layout_toEndOf="@+id/imageView2"
        android:text="Вопрос дня"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnStart"
        android:layout_below="@+id/btnRecords"
        style:srcCompat="@drawable/quest2" />

    <!--<fragment
        android:id="@+id/fragment"
        android:name="com.unocinco.QuestDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnStart"
        android:layout_below="@+id/btnRecords" />-->


</RelativeLayout>
